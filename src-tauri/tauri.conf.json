{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Smash",
  "version": "1.0.0",
  "identifier": "com.smash.pdf",
  "build": {
    "frontendDist": "../build",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Smash - Privacy-First PDF Tools",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": true,
        "transparent": false,
        "dragDropEnabled": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Utility",
    "shortDescription": "Privacy-first PDF tools - compress, merge, split, protect",
    "longDescription": "Smash is a privacy-first PDF toolkit that runs entirely on your device. Compress PDFs with Ghostscript, merge, split, rotate, add watermarks, password protect, and more. Your files never leave your computer.",
    "copyright": "Copyright (c) 2025 Ishan Jalan",
    "publisher": "Ishan Jalan",
    "externalBin": [],
    "resources": [],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "wix": null,
      "nsis": {
        "installMode": "currentUser",
        "languages": ["English"]
      }
    },
    "macOS": {
      "entitlements": null,
      "exceptionDomain": "",
      "frameworks": [],
      "minimumSystemVersion": "10.15",
      "signingIdentity": null
    },
    "linux": {
      "appimage": {
        "bundleMediaFramework": false
      },
      "deb": {
        "depends": ["ghostscript"],
        "files": {},
        "section": "utils",
        "priority": "optional"
      },
      "rpm": {
        "depends": ["ghostscript"],
        "release": "1"
      }
    }
  }
}
